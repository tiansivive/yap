{
	"name": "lama",
	"version": "0.0.0",
	"description": "A small TT core lang with liquid types",
	"repository": {
		"type": "git",
		"url": "https://github.com/tiansivive/lama"
	},
	"license": "MIT",
	"author": {
		"email": "tiago.vilaverde@elastic.co"
	},
	"type": "commonjs",
	"main": "./lib/index.js",
	"bin": {
		"yap": "./scripts/cli.ts"
	},
	"files": [
		"lib/",
		"package.json",
		"LICENSE.md",
		"README.md"
	],
	"scripts": {
		"build": "tsup",
		"format": "prettier .",
		"lint": "eslint . --max-warnings 0",
		"lint:knip": "knip",
		"nearley": "nearleyc src/parser/grammar.ne -o src/parser/grammar.ts && echo '// @ts-nocheck' | cat - src/parser/grammar.ts > temp && mv temp src/parser/grammar.ts",
		"parse": "tsc src/parser/grammar.ts --skipLibCheck --noEmitOnError --allowJs && nearley-test bin/grammar.js",
		"prepare": "husky",
		"railroad": "nearley-railroad src/parser/grammar.ne -o gen/parser/grammar.html",
		"test": "vitest",
		"tsc": "tsc -p ./tsc.tsconfig.json",
		"typecheck": "tsc --noEmit -p ./tsc.tsconfig.json",
		"yap": "ts-node -T ./scripts/cli.ts"
	},
	"lint-staged": {
		"*": "prettier --ignore-unknown --write"
	},
	"dependencies": {
		"@types/js-beautify": "^1.14.3",
		"commander": "^13.1.0",
		"fp-ts": "^2.16.9",
		"immutagen": "^1.0.9",
		"js-beautify": "^1.15.4",
		"lodash": "^4.17.21",
		"moo": "^0.5.2",
		"prettier": "^3.6.2",
		"ts-pattern": "^5.3.1",
		"type-fest": "^4.37.0",
		"winston": "^3.17.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.10.0",
		"@release-it/conventional-changelog": "^8.0.1",
		"@types/eslint__js": "^8.42.3",
		"@types/lodash": "^4.17.7",
		"@types/moo": "^0.5.9",
		"@types/nearley": "^2.11.5",
		"@types/node": "^22.5.4",
		"@vitest/coverage-v8": "^2.0.5",
		"@vitest/eslint-plugin": "^1.1.0",
		"console-fail-test": "^0.5.0",
		"eslint": "^9.10.0",
		"eslint-plugin-n": "^17.10.2",
		"husky": "^9.1.5",
		"knip": "^5.30.0",
		"lint-staged": "^15.2.10",
		"nearley": "^2.20.1",
		"prettier-plugin-curly": "^0.2.2",
		"prettier-plugin-packagejson": "^2.5.2",
		"prettier-plugin-sh": "^0.14.0",
		"release-it": "^17.6.0",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"tsup": "^8.2.4",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.4.0",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^2.0.5"
	},
	"engines": {
		"node": ">=18.3.0"
	},
	"publishConfig": {
		"provenance": true
	}
}
