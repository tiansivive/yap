{
	"compilerOptions": {
		"checkJs": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"module": "CommonJS",
		"moduleResolution": "node10",
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ESNext",
		"noErrorTruncation": false,
		"paths": {
			"@qtt/shared/*": ["./src/QTT/shared/*"],
			"@qtt/src/*": ["./src/QTT/parser/*"],
			"@qtt/elaboration": ["./src/QTT/elaboration/index"],
			"@qtt/elaboration/*": ["./src/QTT/elaboration/*"]
		}
	},
	"include": ["src"],
	// "exclude": ["src/QTT/parser/grammar.ts"],
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}
