{
	"compilerOptions": {
		"checkJs": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"module": "CommonJS",
		"moduleResolution": "node10",
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ESNext",
		"noErrorTruncation": false,
		"paths": {
			"@yap/shared/*": ["./src/shared/*"],
			"@yap/src/*": ["./src/parser/*"],
			"@yap/elaboration": ["./src/elaboration/index"],
			"@yap/elaboration/*": ["./src/elaboration/*"],
			"@yap/utils": ["./src/utils/index"]
		}
	},
	"include": ["src", "scripts/cli.ts"],
	// "exclude": ["src/QTT/parser/grammar.ts"],
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}
