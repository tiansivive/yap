{
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Program",
			"skipFiles": ["<node_internals>/**"],
			"program": "lib/index.js",
			"preLaunchTask": "build"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "ts node",
			"runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node",
			"runtimeArgs": [
				"--transpile-only"
				// if you use esm
			],
			"program": "${file}",
			"cwd": "${workspaceRoot}",
			"internalConsoleOptions": "openOnSessionStart",
			"skipFiles": ["<node_internals>/**", "node_modules/**"]
		}
	],
	"version": "0.2.0"
}
