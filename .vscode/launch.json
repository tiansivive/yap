{
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "cli",
			"runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node",
			"runtimeArgs": [
				"-T",
				"--project",
				"${workspaceRoot}/tsconfig.json",
			],
			"program": "${workspaceRoot}/scripts/cli.ts",
			"args": [
				"debug.yap",
				"--verbose"
			],
			"cwd": "${workspaceRoot}",
			"internalConsoleOptions": "openOnSessionStart",
			"skipFiles": [
				"<node_internals>/**",
				"node_modules/**"
			],
			"console": "integratedTerminal"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "repl",
			"runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node",
			"runtimeArgs": [
				"-T",
				"--project",
				"${workspaceRoot}/tsconfig.json",
			],
			"program": "${workspaceRoot}/scripts/cli.ts",
			"args": [
				"repl",
				//"--verbose"
			],
			"cwd": "${workspaceRoot}",
			"internalConsoleOptions": "openOnSessionStart",
			"skipFiles": [
				"<node_internals>/**",
				"node_modules/**"
			],
			"console": "integratedTerminal"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "test",
			"runtimeExecutable": "node",
			"runtimeArgs": [],
			"program": "${workspaceRoot}/scripts/test.js",
			"cwd": "${workspaceRoot}",
			"internalConsoleOptions": "openOnSessionStart",
			"skipFiles": [
				"<node_internals>/**",
				"node_modules/**"
			],
		}
	],
	"version": "0.2.0"
}